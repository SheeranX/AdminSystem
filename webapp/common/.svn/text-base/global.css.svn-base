.popupover{
    /* position: absolute; */
    top: 10;
    left: 0;
    z-index: 1060;
    display: none;
    width:100%; 
    padding: 1px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: normal;
    line-height: 1.42857143;
    text-align: left;
    text-align: start;
    text-decoration: none;
    text-shadow: none;
    text-transform: none;
    letter-spacing: normal;
    word-break: normal;
    word-spacing: normal;
    word-wrap: normal;
    white-space: normal;
    background-color: #f5f5f5;
    -webkit-background-clip: padding-box;
            background-clip: padding-box;
    border: 1px solid #f5f5f5;
    /* border: 1px solid rgba(0, 0, 0, .2); */
    border-radius: 6px;
    /* -webkit-box-shadow: 0 5px 10px rgba(0, 0, 0, .2);
            box-shadow: 0 5px 10px rgba(0, 0, 0, .2); */
    line-break: auto;
    margin-bottom: 10px;
}

.popupover .layui-inline{
    margin: 0px;
}
.popupover .layui-form-item{
    margin-bottom: 0px;
}
.popupover-content{
    padding: 9px 0px;
}

.popupover > .arrow {
  position: absolute;
  border-width: 11px;
  width: 0; 
  height: 0; 
  border-left: 10px solid transparent; 
  border-right: 10px solid transparent; 
  border-bottom: 15px solid #f1f1f1; 
  margin-top: -15px;
}

.bread-nav{
    position: absolute;
    right: 20px;
    margin-top: 10px;
}
