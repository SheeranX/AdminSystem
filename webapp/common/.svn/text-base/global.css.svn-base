.layui-form-title{
    height: 30px;
    color: #000;
    font-weight: bold;
    line-height: 30px;
    margin-left: 35px;
}
.layui-form-title::before{
    content: '';
    display: block;
    width: 4px;
    height: 20px;
    background: #367dc9;
    position: absolute;
    margin-top: 5px;
    left: 40px;
}
.layui-form-item{
    margin-bottom: 10px;
}
.layui-form-checkbox[lay-skin="primary"] i:hover{
    border: 1px solid #5c90d2;
}

.layui-form-checked[lay-skin="primary"] i {
    border-color: #5c90d2;
    background-color: #5c90d2;
    color: #fff;
}
.layui-form-checkbox[lay-skin="primary"]:hover i {
    border-color: #5c90d2;
    color: #fff;
}
